{
  "name": "Hypothes.is",
  "version": "0.1",
  "manifest_version": 2,

  "description": "The Internet, peer reviewed.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "homepage_url": "https://hypothes.is/",
  "incognito": "split",

  "offline_enabled": false,
  "permissions": [
    "<all_urls>",

    "clipboardWrite",
    "tabs"
  ],

  "background": {
    "persistent": false,
    "scripts": ["js/background.js"]
  },
  "page_action": {}
}
