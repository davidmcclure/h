{
  "name": "Hypothes.is",
  "version": "0.1",
  "manifest_version": 2,

  "description": "The Internet, peer reviewed.",

  "homepage_url": "https://hypothes.is/",
  "incognito": "split",

  "offline_enabled": false,
  "permissions": [
    "<all_urls>",

    "clipboardWrite",
    "tabs"
  ],

  "background": {
    "persistent": false,
    "scripts": ["js/background.js"]
  },
  "page_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Annotate"
  }
}
