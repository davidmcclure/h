{
  "name": "Hypothes.is",
  "version": "${version}",
  "manifest_version": 2,

  "description": "The Internet, peer reviewed.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "homepage_url": "https://hypothes.is/",
  "incognito": "split",

  "offline_enabled": false,
  "permissions": [
    "<all_urls>",

    "clipboardWrite",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],
  "content_security_policy":
    "script-src 'self' https://ajax.googleapis.com; object-src 'self'",

  "background": {
    "persistent": true,
    "scripts": ["js/background.js"]
  },
  "page_action": {},
  "web_accessible_resources": [
    "app.html",
    "css/inject.css",
    "images/pen_1.png",
    "js/inject.min.js",
    "lib/annotator.min.js",
    "lib/jquery-1.8.3.min.js",
    "lib/jschannel.min.js",
    "lib/polyfills/raf.js"
  ]
}
